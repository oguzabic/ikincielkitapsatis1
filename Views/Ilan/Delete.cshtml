@model IkinciElKitapProjesi.Models.Ilan

@{
    ViewData["Title"] = "İlan Sil";
}

<h1>İlan Sil</h1>

<h3>Bu ilanı silmek istediğinizden emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">İlan ID</dt>
        <dd class="col-sm-10">@Model.IlanID</dd>
        
        <dt class="col-sm-2">Kitap ID</dt>
        <dd class="col-sm-10">@Model.KitapID</dd>
        
        <dt class="col-sm-2">Satıcı ID</dt>
        <dd class="col-sm-10">@Model.SaticiID</dd>
        
        <dt class="col-sm-2">Fiyat</dt>
        <dd class="col-sm-10">@Model.Fiyat ₺</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.Durum</dd>
        
        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.Tarih.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IlanID" />
    <input type="submit" value="Sil" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form> 