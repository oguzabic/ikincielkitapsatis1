@model IkinciElKitapProjesi.Models.Kart

@{
    ViewData["Title"] = "Kart Detayları";
}

<h1>Kart Detayları</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Kart ID</dt>
        <dd class="col-sm-10">@Model.KartID</dd>
        
        <dt class="col-sm-2">Kullanıcı ID</dt>
        <dd class="col-sm-10">@Model.KullaniciID</dd>
        
        <dt class="col-sm-2">Kart Numarası</dt>
        <dd class="col-sm-10">@Model.KartNumarasi</dd>
        
        <dt class="col-sm-2">Son Kullanma Tarihi</dt>
        <dd class="col-sm-10">@Model.SonKullanmaTarihi.ToShortDateString()</dd>
        
        <dt class="col-sm-2">CVV</dt>
        <dd class="col-sm-10">@Model.CVV</dd>
        
        <dt class="col-sm-2">Kart Tipi</dt>
        <dd class="col-sm-10">@Model.KartTipi</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.KartID" class="btn btn-warning">Düzenle</a> |
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 