@model IEnumerable<IkinciElKitapProjesi.Models.Yorum>

@{
    ViewData["Title"] = "Yorumlar";
}

<h1>Yorumlar</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Yorum Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Kitap
            </th>
            <th>
                Kullanıcı
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YorumMetni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarih)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kitap.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kullanici.AdSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YorumMetni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarih)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.YorumID" class="btn btn-warning btn-sm">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.YorumID" class="btn btn-info btn-sm">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.YorumID" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table> 